@model LandMarkBLL.DTO.LandmarkSearchDTO
@{
    ViewData["Title"] = "SinglePlace";
}


<h1>@Model.Name</h1>

<div>
    <img src="~/images/@Model.PicturePath" class="card-img-top" alt="...">
    <h3>Description</h3>
    @Html.Raw(Model.Description)
    <h3>History of Singapore</h3>
    @Html.Raw(Model.History)
    <h3>Location</h3>
    <div class="mapouter"><div class="gmap_canvas"><iframe width="600" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=@Model.Name&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://fmovies2.org"></a><br>
    <style>
        .mapouter {
            position: relative;
            text-align: right;
            height: 500px;
            width: 600px;
        }
    </style><a href="https://www.embedgooglemap.net">insert google map into website</a>
    <style>
        .gmap_canvas {
            overflow: hidden;
            background: none !important;
            height: 500px;
            width: 600px;
        }
    </style></div></div>
</div>
<style>
    .card-img-top {
        max-height: 500px;
        max-width: 500px;
    }
</style>

<h3>Area</h3>
@Html.Raw(Model.Area)